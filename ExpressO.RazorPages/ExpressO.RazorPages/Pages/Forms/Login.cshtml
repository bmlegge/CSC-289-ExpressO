@page
@model ExpressO.Pages.Forms.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>UserLogin</h2>


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Log In</h4>
            <hr />
            <div class="form-group">
                <label asp-for="LoginInfo.UserName"></label>
                <input asp-for="LoginInfo.UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LoginInfo.Password"></label>
                <input type="password" asp-for="LoginInfo.Password" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit">Login</button>
            </div>
            <div class="form-group">
                <a asp-page="UserSignUp">Create new account</a>
            </div>
        </form>
    </div>
</div>

