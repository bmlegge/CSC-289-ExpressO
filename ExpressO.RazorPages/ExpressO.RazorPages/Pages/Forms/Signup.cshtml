@page
@model ExpressO.RazorPages.SignupModel
@{
    ViewData["Title"] = "Signup";
}

<h2>Signup</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Log In</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Login.UserName"></label>
                <input type="text" asp-for="Login.UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Login.Password"></label>
                <input type="password" asp-for="Login.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Login.FirstName"></label>
                <input type="text" asp-for="Login.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Login.LastName"></label>
                <input type="text" asp-for="Login.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Login.Email"></label>
                <input type="text" asp-for="Login.Email" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit">Signup</button>
            </div>
        </form>
    </div>
</div>