@page
@model ExpressO.RazorPages.Pages.Forms.CoffeeShopsModel
@{
    ViewData["Title"] = "CoffeeShops";
}
<div class="container-fluid">
    <form class="navbar-form navbar-right" method="get">
        <div class="form-group">
            <input type="text" class="form-control" asp-for="SearchTerm" placeholder="Search by Zip Code">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>


<div class="container-fluid">

    @foreach (var i in Model.CoffeeShopList)
    {
        <div class="well">

            <div><h3>@i.Name</h3></div>
            <div>@i.Address</div>
            <div>@i.City, @i.Zip</div>
            <div>@i.Phone</div>
            <div>
                <a asp-page="/Forms/Menu" asp-route-id="@i.Id">Menu</a>
            </div>
        
        </div>
    }
</div>







