@page
@model ExpressO.RazorPages.SignupModel
@{
    ViewData["Title"] = "Signup";
}

<h2>Signup</h2>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group">
            <label asp-for="Login.FirstName" class="col-lg-2 control-label">First Name</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" asp-for="Login.FirstName" placeholder="First Name">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Login.LastName" class="col-lg-2 control-label">Last Name</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" asp-for="Login.LastName" placeholder="Last Name">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Login.Email" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" asp-for="Login.Email" placeholder="Email">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Login.UserName" class="col-lg-2 control-label">Username</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" asp-for="Login.UserName" placeholder="Username">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Login.Password" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-10">
                <input type="password" class="form-control" asp-for="Login.Password" placeholder="Password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary">Sign Up</button>
                <button type="reset" class="btn btn-default">Reset Form</button>
            </div>
        </div>
    </fieldset>
</form>