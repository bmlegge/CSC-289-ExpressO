@page
@model ExpressO.Pages.Forms.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>


<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group">
            <label asp-for="Login.UserName" class="col-lg-2 control-label">Username</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" asp-for="Login.UserName" placeholder="Username">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Login.Password" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-10">
                <input type="password" class="form-control" asp-for="Login.Password" placeholder="Password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary">Log In</button>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <a asp-page="/Forms/Signup">Sign Up</a>
            </div>
        </div>
        
    </fieldset>
</form>


